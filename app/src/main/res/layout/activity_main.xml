<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kcroz.joggr.MainActivity"
    android:background="@drawable/splash">

    <Button
        android:id="@+id/btnStartRun"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:height="60dp"
        android:background="@drawable/main_page_image_button"
        android:drawablePadding="6dp"
        android:gravity="center"
        android:onClick="startJoggingActivity"
        android:padding="6dp"
        android:text="Start New Run"
        android:textColor="@drawable/button_text"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7"/>

    <Button
        android:id="@+id/btnViewRuns"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:layout_weight="1"
        android:height="60dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/main_page_image_button"
        android:drawablePadding="6dp"
        android:gravity="center"
        android:onClick="startViewRunsActivity"
        android:padding="6dp"
        android:text="View Runs"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnStartRun"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="109dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/logo"/>


</android.support.constraint.ConstraintLayout>
